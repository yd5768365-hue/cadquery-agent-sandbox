# Database Configuration
DATABASE_URL=postgresql://cae_user:CHANGE_ME_PASSWORD@postgres:5432/cae_platform
POSTGRES_DB=cae_platform
POSTGRES_USER=cae_user
POSTGRES_PASSWORD=CHANGE_ME_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0

# Flower Configuration
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:CHANGE_ME_PASSWORD

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=CHANGE_ME_TO_RANDOM_STRING_32_CHARS_LONG
JWT_SECRET_KEY=CHANGE_ME_TO_RANDOM_STRING_32_CHARS_LONG
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Paths
DATA_DIR=/app/data
MESH_DIR=/app/meshes
RESULT_DIR=/app/results
VISUALIZATION_DIR=/app/visualizations

# ML Configuration
ML_MODEL_PATH=/app/ml/models
ML_BATCH_SIZE=32
ML_EPOCHS=100

# Simulation Configuration
GMSH_THREADS=4
CALCULIX_THREADS=8
OMP_NUM_THREADS=8

# Nginx Configuration
NGINX_HOST=localhost
NGINX_PORT=80

# SSL/TLS Configuration (for HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Email Notifications (optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@cae-platform.com

# External Services (optional)
OPENAI_API_KEY=your-openai-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
